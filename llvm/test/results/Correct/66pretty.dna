(* prettyStyle created by Clark *)

def prettyStyle

        (* function starLine
        -- prints a row of 'ch' characters 'size' times.
        *)
        def starLine: ch as byte, size as int
                var i is int
                i := 0
                loop:
                        if i >= size:
                                break
                        writeChar: ch
                        i := i + 1

        (* function starChar
        -- prints a 'phrase' with 'ch' between each two consequent
        -- characters.
        *)
        def starChar: phrase as byte[], ch as byte, size as int
                var i is int
                i := 0
                loop:
                        if i >= size:
                                break
                        writeChar: ch
                        writeChar: ' '
                        writeChar: phrase[i]
                        writeChar: ' '
                        i := i + 1
                writeChar: ch

